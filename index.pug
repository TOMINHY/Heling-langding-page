            .project-item 
                .project-image 
                  img(src="https://images.unsplash.com/photo-1617098709804-705581f844eb?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1064&q=80", alt="")
                .container
                  .project-info 
                    h3.project-name Dining Room
                    a(href="#!").project-link.g-link View Details 
        section.designer 
          .container 
            .designer-main 
              .designer-content 
                h2.designer-heading.font-heading.g-heading Our designers
                p.designer-desc.g-text Lorem ipsum dolor sit amet, consectetur adipiscing elit. Blandit mauris etiam faucibus laoreet vestibulum
                p.designer-desc.g-text Lorem ipsum dolor sit amet, consectetur adipiscing elit. Blandit mauris etiam faucibus laoreet vestibulum nam. Gravida aenean orci, facilisis senectus.
                a(href="#!").designer-link.g-link See All Designers 
              .designer-image
                img(srcset="./images/img5.png 2x", alt="") 
        section.blog 
          .container 
            .blog-header
              h2.blog-heading.font-heading.g-heading Our latest articles
              a(href="#!").blog-views.g-link Read All Articles 
            .blog-list 
              .blog-item 
                .blog-image
                  img(srcset="./images/img6.png 2x", alt="")
                .blog-content
                  h3.blog-title.font-heading Why your client needs interior design
                  .blog-meta
                    span.blog-link.g-link Read More 
                    span.blog-time April 30, 2020
              .blog-item 
                .blog-image
                  img(srcset="./images/img7.png 2x", alt="")
                .blog-content
                  h3.blog-title.font-heading How to decore your home
                  .blog-meta
                    span.blog-link.g-link Read More 
                    span.blog-time April 30, 2020
      footer.footer 
        .container
          a(href="#top").back-to-top.g-link
            img(src="./images/img-up.svg", alt="") 
            span Go to the top
          .footer-main
            .footer-content 
              h3.footer-heading.g-heading.font-heading Stay in touch with us
              .footer-info 
                span.text-dot DM us on:
                h4.footer-info-item.font-heading hello@heling.com
              .footer-info 
                span.text-dot Call us on:
                h4.footer-info-item.font-heading +2(930) 859-464
            .footer-image
              img(srcset="./images/img8.png 2x", alt="")
          .footer-bottom 
            span.footer-coppyright.g-text ©Heling 2021.
            a.footer-logo(href="index.html") 
              img(srcset ="./images/logo.png 2x", alt="")
            span.footer-privacy.g-text Privacy Policy
