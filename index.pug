                .container
                  .project-info 
                    h3.project-name Dining Room
                    a(href="#!").project-link.g-link View Details 
            .project-item 
                .project-image 
                  img(src="https://images.unsplash.com/photo-1595329088732-d3b286981166?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1674&q=80", alt="")
                .container
                  .project-info 
                    h3.project-name Dining Room
